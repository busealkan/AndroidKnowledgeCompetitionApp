<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logoYaziRengi"
    tools:context=".activities.OyuncuIsimActivity">

    <ImageView
        android:id="@+id/imgLogoE2"
        android:layout_width="@dimen/logoBoyut"
        android:layout_height="@dimen/logoBoyut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnIleriE2"
        android:layout_width="@dimen/ileriButonBoyut"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_design"
        android:text="@string/butonIleri"
        android:textColor="@color/logoYaziRengi"
        android:textSize="@dimen/yaziBoyut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOyuncuAdiGir" />

    <TextView
        android:id="@+id/textOyuncuAdiBilgi"
        android:layout_width="@dimen/oyuncuAdiBilgiBoyut"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="68dp"
        android:text="@string/oyuncuAdi"
        android:textColor="@color/logoRengi"
        android:textSize="@dimen/yaziBoyut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoE2" />

    <EditText
        android:id="@+id/txtOyuncuAdiGir"
        android:layout_width="@dimen/oyuncuAdiBoyut"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_design"
        android:drawableLeft="@drawable/usericon"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/oyuncuAdiGiriniz"
        android:inputType="textPersonName"
        android:textColor="@color/logoRengi"
        android:textSize="@dimen/yaziBoyut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOyuncuAdiBilgi" />

</androidx.constraintlayout.widget.ConstraintLayout>